{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
      "builder": "nixpacks",
      "config": {
        "aptPackages": ["libgl1-mesa-glx", "libsm6", "libxrender1", "libxext6"],
        "scripts": {
          "postInstall": "pip install --no-cache-dir -r requirements.txt"
        }
      }
    },
    "deploy": {
      "startCommand": "gunicorn --bind 0.0.0.0:$PORT app:app"
    }
  }